<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:id="@+id/layoutrelmain"
    android:animateLayoutChanges="true"
    >




                <LinearLayout
                    android:id="@+id/linearlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/dietologo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/dietlogo"
                        />

                    <TextView
                        android:id="@+id/welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/helveticaneue_light"
                        android:text="Welcome!!"
                        android:textColor="@color/blue"
                        android:textSize="52sp" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/welcome_email_input_layout"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#F23B54"
                        app:boxBackgroundColor="#F23B54"
                        app:boxStrokeColor="#F23B54"
                        app:errorEnabled="true"
                        app:helperText="*Required"
                        app:helperTextEnabled="true"
                        app:passwordToggleTint="#F23B54"
                       >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/welcome_email_input_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:hint="Email"
                            android:textColor="#F23B54"
                            android:textColorHighlight="#F23B54"
                            android:textColorHint="#F23B54"
                            android:textColorLink="#F23B54"
                            />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:id="@+id/welcome_password_input_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColorHint="#F23B54"
                        app:boxBackgroundColor="#F23B54"
                        app:boxStrokeColor="#F23B54"
                        app:counterEnabled="true"
                        app:errorEnabled="true"
                        app:helperText="*Required"
                        app:helperTextEnabled="true"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#F23B54"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/welcome_password_input_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="@color/pink"/>



                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:id="@+id/welcome_number_input_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColorHint="@color/pink"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxStrokeColor="@color/pink"
                        app:counterEnabled="true"
                        app:errorEnabled="true"
                        app:helperText="*Required"
                        app:helperTextEnabled="true"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/welcome_number_input_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:hint="Username"
                            android:inputType="text"
                            android:textColor="@color/pink" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/needHelp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="180dp"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:textColor="#F23B54"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:text="Need Help?">
                        </TextView>
                        <Button
                            android:id="@+id/signupbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/login_btn"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:text="Signup"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
</RelativeLayout>